        <header>
            <h1>Finstagram</h1>
        </header>
        <main role="main">
          <% @posts.each do |post| %>
            <article class="post">
                <div class="user-info">
                    <img src= "<%= post[:avatar_url] %>" 
                         alt= "<%= post[:username] %>"
                    />
                    <h2><%= post[:username] %></h2>
                    <h3><%= post[:humanized_time_ago] %></h3>
                </div>
                <a href="#" class = "photo">
                    <img src = "<%= post[:photo_url] %>" 
                         alt = "<%= post[:username] %>" />
                </a>
                <div class="actions">
                    <%= post[:like_count] %> likes
                    <span><%= post[:comment_count] %> comments</span>
                </div>
                <ul class="comments">
                    <li>
                        <p>
                            <% post[:comments].each do |comment| %>
                              <%= comment[:username] %>: <%= comment[:text] %>
                            <% end %>
                        </p>
                    </li>
                </ul>
            </article>
        <% end %>
        </main>
